<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.RulesFragment">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/id_rules_img"
        android:orientation="vertical"
        android:layout_height="match_parent"/>


    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_rules_tv_title_rules"
                android:background="#4fc2c1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="-game rules-"
                android:fontFamily="@font/chango"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/id_tv_title_rules1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="3 dice"
                android:textSize="35sp"
                android:background="@drawable/background_ll_menu1"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_rules_tv_title_rules"/>

            <TextView
                android:id="@+id/id_rules_tv_rules1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="25sp"
                android:background="@drawable/background_ll_menu2"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_tv_title_rules1"/>


            <TextView
                android:id="@+id/id_tv_title_rules2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="identical points"
                android:textSize="35sp"
                android:background="@drawable/background_ll_menu1"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_rules_tv_rules1"/>

            <TextView
                android:id="@+id/id_rules_tv_rules2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="25sp"
                android:background="@drawable/background_ll_menu2"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_tv_title_rules2"/>


            <TextView
                android:id="@+id/id_tv_title_rules3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="guess points"
                android:textSize="35sp"
                android:background="@drawable/background_ll_menu1"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_rules_tv_rules2"/>

            <TextView
                android:id="@+id/id_rules_tv_rules3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="25sp"
                android:background="@drawable/background_ll_menu2"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_tv_title_rules3"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/id_rules_button_finish"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="finish"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/chango"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/id_rules_tv_rules3"
                android:background="@drawable/background_ll_game_red_1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>